{
  "name": "PagerDuty-Trigger",
  "type": "trigger",
  "execProgram": "node",
  "main": "app.js",
  "imgUrl": "pd.png",
  "version": "1.0.4",
  "description": "PagerDuty Trigger",
  "methods": [
    {
      "name": "INCIDENT_WEBHOOK",
      "route": "post /webhook/pagerduty/incident",
      "viewName": "PagerDuty Event",
      "params": [
        {
          "name": "EVENT",
          "viewName": "Event Type",
          "type": "options",
          "options" : [
            {
              "id":"any",
              "name":"Any"
            },
            {
              "id":"incident.trigger",
              "name":"Triggered"
            },
            {
              "id":"incident.acknowledge",
              "name":"Acknowledged"
            },
            {
              "id":"incident.unacknowledge",
              "name":"Unacknowledged"
            },
            {
              "id":"incident.resolve",
              "name":"Resolved"
            },
            {
              "id":"incident.escalate",
              "name":"Escalated"
            },
            {
              "id":"incident.delegate",
              "name":"Delegated"
            },
            {
              "id":"incident.annotate",
              "name":"Annotated(Note Added)"
            }
          ]
        },
        {
          "name": "urgency",
          "viewName": "Incident Urgency",
          "type": "options",
          "options" : [
            {
              "id":"any",
              "name":"Any"
            },
            {
              "id":"high",
              "name":"High"
            },
            {
              "id":"low",
              "name":"Low"
            }
          ]
        }
      ]
    }
  ]
}